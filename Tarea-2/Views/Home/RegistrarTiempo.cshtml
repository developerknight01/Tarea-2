@{
    ViewData["Title"] = "Registrar Tiempo";
    Layout = null;
}
<section class="disable">
    <aside class="contentHead">
        <aside class="contentRow contentRow-1">
            <h3>Cálculo de velocidad</h3>
        </aside>
    </aside>
    <aside class="contentBody">
        <div class="boxBody">
            <div class="boxCol col1">
                <lable>Id del ciclista:</lable>
            </div>
            <div class="boxCol col2">
                <input type="number" id="tbID" disabled/>                
            </div>
        </div>
        <div class="boxBody">
            <div class="boxCol col1">
                <lable>Nombre completo:</lable>
            </div>
            <div class="boxCol col2">
                <input type="text" id="tbName" disabled/>                
            </div>
        </div>
        <div class="boxBody">
            <div class="boxCol col1">
                <lable>Minutos:</lable>
            </div>
            <div class="boxCol col2">
                <input type="number" id="tbMinutes" />
                <span class="icon require"><i class="fa-solid fa-asterisk"></i></span>
            </div>
        </div>
        <div class="boxBody">
            <div class="boxCol col1">
                <lable>Segundos:</lable>
            </div>
            <div class="boxCol col2">
                <input type="text" id="tbSeconds" />
                <span class="icon require"><i class="fa-solid fa-asterisk"></i></span>
            </div>
        </div>
        <div>
            <button id="registerTime">Guardar</button>
        </div>
    </aside>
</section>